loadstring(game:HttpGet("https://raw.githubusercontent.com/mamelokq/clutch-ware/refs/heads/main/script"))()
loadstring(game:HttpGet("https://raw.githubusercontent.com/faisal31312/elemental/refs/heads/main/elemental"))()

local Players = game:GetService("Players")
local player = Players.LocalPlayer

if player and player.Character then
    player.CameraMode = Enum.CameraMode.Classic
    player.DevCameraOcclusionMode = Enum.DevCameraOcclusionMode.Invisicam
end

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

local player = game.Players.LocalPlayer

local function selectFirstTool()
    local backpack = player:FindFirstChild("Backpack")
    if backpack then
        task.wait(5) -- Wait 5 seconds before selecting the tool
        local firstTool = backpack:FindFirstChildOfClass("Tool") -- Get the first tool in the inventory
        if firstTool then
            firstTool.Parent = player.Character -- Move it to the character to equip it
        end
    end
end

-- Run when the player spawns or respawns
player.CharacterAdded:Connect(function()
    selectFirstTool()
end)


local function floatUnderPlayer(targetPlayer)
    local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local targetHRP = targetPlayer.Character.HumanoidRootPart
        local hrp = Character:FindFirstChild("HumanoidRootPart")
        if hrp then
            spawn(function()
                for i = 1, 40 do -- Update position frequently for 2 seconds (40 times at 0.05s intervals)
                    hrp.CFrame = targetHRP.CFrame * CFrame.new(0, -10, 0) -- Move further underneath
                    wait(0.05)
                end
            end)
        end
    end
end

local function startFloatingLoop()
    spawn(function()
        while true do
            local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
            for _, player in pairs(Players:GetPlayers()) do
                if player ~= LocalPlayer then
                    floatUnderPlayer(player)
                    wait(2) -- Wait 2 seconds before switching
                end
            end
        end
    end)
end

LocalPlayer.CharacterAdded:Connect(function()
    wait(1) -- Small delay to ensure character is fully loaded
    startFloatingLoop()
end)

startFloatingLoop()
